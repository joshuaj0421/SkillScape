<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_leaderboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- User Rank and Score -->
    <TextView
        android:id="@+id/user_rank_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Rank: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/user_score_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your High Score: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Leaderboard RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaderboard_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_margin="16dp" />

</LinearLayout>
